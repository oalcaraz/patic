     <form method="post">
      <input id="input_name" class="text-inputs" type="text" name="name" placeholder="{{editable_elements.input_name.placeholder}}">
      <input id="input_mail" class="text-inputs" type="text" name="email" placeholder="{{editable_elements.input_mail.placeholder}}">
      <div id="send-now"><input type="submit" value="{{editable_elements.input_send.value}}" id="input_send"></div>
     </form>
   </div>
